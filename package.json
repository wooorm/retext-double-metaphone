{
  "name": "retext-double-metaphone",
  "version": "0.1.0",
  "description": "Retext implementation of the Double Metaphone algorithm",
  "keywords": [
    "double",
    "metaphone",
    "retext"
  ],
  "author": "Titus Wormer <tituswormer@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "double-metaphone": "^0.1.0"
  },
  "devDependencies": {
    "eslint": "^0.7.4",
    "istanbul": "~0.3.0",
    "jscs": "^1.5.4",
    "mocha": "~1.20.1",
    "retext": "^0.1.0-rc.4",
    "retext-porter-stemmer": "^0.1.0",
    "retext-visit": "^0.1.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wooorm/retext-double-metaphone.git"
  },
  "scripts": {
    "test": "node_modules/.bin/_mocha --reporter spec --check-leaks -u exports spec/retext-double-metaphone.spec.js",
    "test-travis": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha --report lcovonly -- --reporter spec --check-leaks -u exports spec/retext-double-metaphone.spec.js",
    "lint": "npm run-script lint-api && npm run-script lint-test && npm run-script lint-style",
    "lint-api": "node_modules/.bin/eslint index.js --env node --env browser --rule 'quotes: [2, single]'",
    "lint-test": "node_modules/.bin/eslint spec/retext-double-metaphone.spec.js --env node --env mocha --rule 'quotes: [2, single]'",
    "lint-style": "node_modules/.bin/jscs index.js spec/retext-double-metaphone.spec.js --reporter=inline",
    "install-browser-test": "npm install browserify",
    "build-browser-test": "node_modules/.bin/browserify spec/retext-metaphone.spec.js -o spec/browser.spec.js",
    "coverage": "node_modules/.bin/istanbul cover node_modules/.bin/_mocha -- -- spec/retext-double-metaphone.spec.js",
    "make": "npm run-script lint && npm run-script coverage"
  },
  "testling": {
    "files": "spec/retext-double-metaphone.spec.js",
    "harness": "mocha",
    "browsers": [
      "iexplore/latest",
      "chrome/latest",
      "chrome/canary",
      "firefox/latest",
      "firefox/nightly",
      "opera/latest",
      "opera/next",
      "safari/latest",
      "iphone/latest",
      "android-browser/latest"
    ]
  }
}
